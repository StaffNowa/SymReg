{% extends '::base.html.twig' %}

{% block body -%}
    <h1>WorkTime</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Pos_id</th>
                <td>{{ entity.posid }}</td>
            </tr>
            <tr>
                <th>User_id</th>
                <td>{{ entity.userid }}</td>
            </tr>
            <tr>
                <th>Work_time_start</th>
                <td>{{ entity.worktimestart|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Work_time_end</th>
                <td>{{ entity.worktimeend|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Breakfast</th>
                <td>{{ entity.breakfast }}</td>
            </tr>
            <tr>
                <th>Data_json</th>
                <td>{{ entity.datajson }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('work_time') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('work_time_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('work_time_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
