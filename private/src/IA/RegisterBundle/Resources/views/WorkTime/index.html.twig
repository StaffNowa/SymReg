{% extends '::base.html.twig' %}

{% block body -%}
    <h1>WorkTime list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pos_id</th>
                <th>User_id</th>
                <th>Work_time_start</th>
                <th>Work_time_end</th>
                <th>Breakfast</th>
                <th>Data_json</th>
                <th>Updated_at</th>
                <th>Created_at</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('work_time_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.posid }}</td>
                <td>{{ entity.userid }}</td>
                <td>{% if entity.worktimestart %}{{ entity.worktimestart|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.worktimeend %}{{ entity.worktimeend|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.breakfast }}</td>
                <td>{{ entity.datajson }}</td>
                <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('work_time_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('work_time_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('work_time_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
