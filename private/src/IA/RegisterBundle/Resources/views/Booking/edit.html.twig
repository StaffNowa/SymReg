{% extends '::base.html.twig' %}

{% form_theme edit_form _self %}

{% if edit_form is defined %}
    {% form_theme edit_form 'IARegisterBundle:Form:fields.html.twig' %}
{% endif %}

{% block body -%}
    <div class="span5">
        <h1>Booking edit</h1>

        <form action="{{ path('booking_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
            <input type="hidden" name="_method" value="PUT"/>
            {{ form_widget(edit_form) }}
            <p>
                <button type="submit" class="btn btn-primary pull-left">Edit</button>
            </p>
        </form>

        <form action="{{ path('booking_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE"/>
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-primary pull-right">Delete</button>
        </form>

        <div class="record_actions">
            <a href="{{ path('booking') }}">
                Back to the list
            </a>
        </div>
    </div>

{% endblock %}
