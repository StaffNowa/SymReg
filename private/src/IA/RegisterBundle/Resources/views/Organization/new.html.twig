{% extends '::base.html.twig' %}

{% form_theme form _self %}

{% if form is defined %}
    {% form_theme form 'IARegisterBundle:Form:fields.html.twig' %}
{% endif %}

{% block body -%}
    <div class="span5">
        <h1>Organization creation</h1>

        <form action="{{ path('organization_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
            {{ form_widget(form) }}
            <p>
                <button type="submit" class="btn btn-primary pull-left">Create</button>
            </p>
        </form>

        <a href="{{ path('contact_info_new') }}" class="btn btn-primary pull-right">
            Create contact information
        </a>

        <div class="record_actions">
            <a href="{{ path('organization') }}">
                Back to the list
            </a>
        </div>
    </div>
{% endblock %}
