{% extends '::base.html.twig' %}

{% block body %}
    <h1>User Profile</h1>
    <div class="row">
        <div class="span2">
            <img src="http://thetransformedmale.files.wordpress.com/2011/06/bruce-wayne-armani.jpg"  alt="" class="img-rounded">
        </div>
        <div class="span4">
            <blockquote>
                <p>{{ entity.username }}</p>
                {% if (entity.usercontact.address) %}
                    <small><cite title="{{ entity.usercontact.address }}">{{ entity.usercontact.address }}<i class="icon-map-marker"></i></cite></small>
                {% endif %}
            </blockquote>
            <p>
                {% if (entity.usercontact.tel) %}
                    <i class="">Phone: </i> {{ entity.usercontact.tel }}<br>
                {% endif %}
                {% if (entity.usercontact.fax) %}
                    <i class="">Fax: </i> {{ entity.usercontact.fax }}<br>
                {% endif %}
                <i class="icon-envelope"></i>E-mail: {{ entity.usercontact.email }} <br>
                <i class="icon-globe"></i>WWW: <a href="{{ entity.usercontact.wwwaddress }}" target="_blank">{{ entity.usercontact.wwwaddress }}</a> <br>
                <i>Personal code:</i> {{ entity.usercontact.personalcode }}<br>
                <i class="icon-eye-open"></i> {{ entity.createdat|date('Y-m-d H:i:s') }}
            </p>
            <p>
                <a href="{{ path('contact_info_edit', { 'id': entity.id }) }}" >Change Contact Information</a>
            </p>
        </div>


    </div>
{% endblock %}
