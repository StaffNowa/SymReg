{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}


{% block body -%}
    <div class="span3">
        <h1>User Roles</h1>

        <form action="{{ path('user_role', { id: user_id }) }}" method="post" {{ form_enctype(role_form) }}>
            {{ form_widget(role_form) }}
            {% for role in roles %}
                <label class="checkbox">{{ role.name }}
                    {% if (entity.hasrole(role.role)) %}
                        <input type="checkbox" id="role" name="role[]" value="{{ role.id }}" checked/>
                    {% else %}
                        <input type="checkbox" id="role" name="role[]" value="{{ role.id }}"/>
                    {% endif %}
                </label>
            {% endfor %}
            <p>
                <button type="submit" class="btn btn-primary">Save</button>
            </p>
        </form>

        <div style="clear: both"></div>

        <div class="record_actions">
            <a href="{{ path('user') }}">
                Back to the list
            </a>
        </div>
    </div>
{% endblock %}
